extends layout.jade

block style
  link(rel='stylesheet', href='css/jquery.flexnav-light.css')
block demo-nav
  .demos
    a(href="index.html") Demo 1: Dark theme
    a.active(href="index2.html") Demo 2: Light theme


block nav
  .fn-container.fn-light
    .fn-name 
      span Menu
    .fn-button
      span.fn-bar
      span.fn-bar
      span.fn-bar
    .flexnav
      ul
        //- first level
        li
          a(href="#") Item 1
          //- second level
          ul
            li
              a(href="#") Sub-Item 1
            li
              a(href="#") Sub-Item 2
              //- third level
              ul
                li
                  a(href="#") Sub-Sub-Item 1
                li
                  a(href="#") Sub-Sub-Item 2
                li
                  a(href="#") Sub-Sub-Item 3
            li
              a(href="#") Sub-Item 3
            li
              a(href="#") Sub-Item 4
            li
              a(href="#") Sub-Item 5
        li
          a(href="#") Item 2
        li
          a(href="#") Item 3
          ul
            li
              a(href="#") Sub-Item 1
            li
              a(href="#") Sub-Item 2
              ul
                li
                  a(href="#") Sub-Sub-Item 1
                li
                  a(href="#") Sub-Sub-Item 2
                li
                  a(href="#") Sub-Sub-Item 3
            li
              a(href="#") Sub-Item 3
              ul
                li
                  a(href="#") Sub-Sub-Item 1
                li
                  a(href="#") Sub-Sub-Item 2
                li
                  a(href="#") Sub-Sub-Item 3          
            li
              a(href="#") Sub-Item 4
            li
              a(href="#") Sub-Item 5
        li
          a(href="#") Item 4
        li
          a(href="#") Item 5


block script
  script
    (function($){
      $('.flexnav').flexnav({
        breakpoint: 767,
        animationSpeed: 250, 
        backLabel: 'Back', 
        useActiveItemAsBackLabel: false
      });
    })(jQuery);